{
  "id": "example-workspace",
  "name": "Example workspace",
  "env": [
    "FOO=1"
  ],
  "tasks": [
    {
      "id": "sleep",
      "name": "Sleep for 60 seconds",
      "service": true,
      "driver": "exec",
      "command": "/bin/sleep",
      "args": [ "10" ],
      "env": [
        "BAR=1"
      ]
    },
    {
      "id": "log-test",
      "name": "Output a log line every second",
      "service": true,
      "driver": "exec",
      "command": "go run example/main.go",
      "env": [
        "BAR=2"
      ]
    },
    {
      "id": "echo",
      "name": "Echo something",
      "service": false,
      "driver": "shell",
      "command": "echo",
      "args": [ "something" ],
      "env": [
        "BAR=3"
      ]
    }
  ]
}
